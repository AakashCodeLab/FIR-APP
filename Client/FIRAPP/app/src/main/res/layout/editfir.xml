<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity"

    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:id="@+id/linearLayout2">



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"></android.support.design.widget.TextInputLayout>


        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:hint="Enter FIR ID"
            android:textColorHint="#cccccc"
            android:drawableRight="@drawable/fid"/>


            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                android:padding="20dp"
                android:background="@drawable/edittext_bottom_bg"
                android:inputType="textPostalAddress"
                android:hint="Enter Comment"

                android:textColorHint="#cccccc"

                />


    </LinearLayout>
    <ImageView
        android:layout_width="137dp"
        android:layout_height="110dp"
        android:id="@+id/imageView3"
        android:src="@drawable/edit"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#085682"
        android:textColor="#ffffff"
        android:padding="20dp"
        android:text="Edit FIR"
        style="@style/DefaultButtonText"
        android:onClick="OnSignIn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:entries="@array/stype"
        android:prompt="@string/spinner_title"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >
    </Spinner>


</RelativeLayout>
